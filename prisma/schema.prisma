// Prisma schema for vehicle logs
// Run `npx prisma migrate dev --name init` after editing

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Log {
  id        Int      @id @default(autoincrement())
  latitude  Float
  longitude Float
  speed     Float // stored in km/hr
  createdAt DateTime @default(now())
}
